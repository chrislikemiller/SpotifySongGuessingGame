<Window x:Class="SpotifySongGuessingGame.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SpotifySongGuessingGame.WPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Spotify Song Guessing Game"
        Width="300"
        Height="200"
        mc:Ignorable="d">
	<Grid>
		<Grid.Resources>
			<Style TargetType="Button">
				<Style.Setters>
					<Setter Property="Margin" Value="5" />
					<Setter Property="Height" Value="28" />
				</Style.Setters>
			</Style>
		</Grid.Resources>
		<StackPanel>
			<Button Click="SpotifyDataBaseOpenClicked" Content="Open Spotify song database" />
			<Button Click="MusicbrainzManagerClicked" Content="Release date update with Musicbrainz" />
			<Button Click="ManualReleaseDateManagerClicked" Content="Manual update release dates" />
			<Button Click="ConfigManagerClicked" Content="Configs" />
		</StackPanel>
	</Grid>
</Window>
